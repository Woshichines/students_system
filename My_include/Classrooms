#ifndef CLASSROOMS
#define CLASSROOMS

#include "./head"

using namespace std;

class Classrooms
{
    public:
        static int m_总学生数量;

    private:
        Schools* m_校区;
        Teachers* m_教师;
        int m_级数;
        int m_班数;
        string m_班名;
        int m_学生数;

    public:
        Classrooms(
                    Schools *校区 = NULL, 
                    Teachers *教师 = NULL, 
                    int 级数 = 求级数(), 
                    int 班数 = 1, 
                    string 班名 = 求级数()+"届新建班级")
                    :   m_校区(校区),
                        m_教师(教师),
                        m_级数(级数),
                        m_班数(班数),
                        m_班名(班名),
                        m_学生数(0){}


        int 打印届数();

        int 打印其他();

};



int Classrooms::打印届数()
{
    cout << m_级数 << endl;
    return 0;
}

int Classrooms::打印其他()
{
    cout << m_级数<< endl
        << m_总学生数量 << endl
        << m_班名 << endl
        << m_班数 << endl;
    return 0;
}

#endif